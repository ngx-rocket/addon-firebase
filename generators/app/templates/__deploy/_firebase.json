{
  "hosting": {
    "public": "<%= props.target && props.target.includes('cordova') ? 'www' : 'dist' %>",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
